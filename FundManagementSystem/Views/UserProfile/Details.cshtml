@model FundManagementSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile";
}
<style>
    .profile-box {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 30px;
        width: 600px;
        margin: 40px auto;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

        .profile-box h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #333;
        }

    .profile-details p {
        font-size: 16px;
        margin: 10px 0;
        color: #444;
    }

    .profile-image {
        text-align: center;
        margin-top: 20px;
    }

        .profile-image img {
            border: 1px solid #ccc;
            border-radius: 8px;
            width: 300px;
        }

    .status-badge {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 20px;
        color: white;
        font-weight: bold;
        font-size: 14px;
    }

    .status-pending {
        background-color: #e6a100;
    }

    .status-approved {
        background-color: #28a745;
    }
</style>

<div class="topbar">
    <div class="logo">Al Taqwa Ltd</div>
</div>

<div class="container">
    <div class="profile-box">
        <h2>User Profile</h2>
        <div class="profile-details">
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Mobile:</strong> @Model.PhoneNumber</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>National ID:</strong> @Model.Id</p>
            <p><strong>Total Fund Submitted:</strong> ৳@Model.TotalFundAmount</p>
            <p>
                <strong>Fund Status:</strong>
                <span class="status-badge status-pending">Pending</span>
                @* Change to status-approved if you have a property for approval *@
            </p>
        </div>
        <div class="profile-image">
            <p><strong>Fund Slip:</strong></p>
            <img src="~/uploads/fund-slip.jpg" alt="Fund Slip">
        </div>
    </div>
</div>
